<h1>Добавить новый курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса" required=""></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate">
        <label for="price">Цена курса</label>
        <span class="helper-text" min="1" data-error="Введите цену курса" required=""></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL картинки" required=""></span>
    </div>
    
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Добавить курс</button>
</form>