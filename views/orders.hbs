<h1>Мои заказы</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Заказ <small>{{id}}</small>
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.name}}</em> ({{user.email}})</p>

                        <ol>
                            {{#each courses}}
                                <li>{{course.title}} (x<strong>{{count}}</strong>)</li>
                            {{/each}}
                        </ol>

                        <hr>
                        <p>Цена: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Вы ничего не заказывали</p>
{{/if}}