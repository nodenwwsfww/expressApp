<div class="row">
    <div id="reset" class="col s6 offset-s3">
        {{#if error}}
            <p class="alert">{{error}}</p>
        {{/if}}
        <h1>Восстановление доступа</h1>
        <form action="/auth/reset" method="POST">
            <div class="input-field">
                <input id="log-email" name="email" type="email" class="validate auto-complete" required autocomplete>
                <label for="log-email">Email</label>
                <span class="helper-text" data-error="Введите email" required=""></span>
            </div>
            
            <input type="hidden" name="_csrf" value="{{csrf}}">
            
            <button class="btn btn-primary" type="submit">Восстановить доступ</button>
        </form>
    </div>
</div>