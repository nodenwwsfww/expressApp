<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active">Авторизация</a></li>
                <li class="tab col s6"><a href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h1>Авторизация</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="log-email" name="email" type="email" class="validate auto-complete" required autocomplete>
                    <label for="log-email">Email</label>
                    <span class="helper-text" data-error="Введите email" required=""></span>
                </div>

                <div class="input-field">
                    <input id="log-password" name="password" type="password" class="validate" autocomplete>
                    <label for="log-password">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль" required=""></span>
                </div>
                
                <input type="hidden" name="_csrf" value="{{csrf}}">
                
                <button class="btn btn-primary" type="submit">Войти</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h1>Регистрация</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" autocomplete>
                    <label for="name">Имя</label>
                    <span class="helper-text" data-error="Введите имя" required=""></span>
                </div>

                <div class="input-field">
                    <input id="reg-email" name="email" type="email" class="validate" required autocomplete>
                    <label for="reg-email">Email</label>
                    <span class="helper-text" data-error="Введите email" required=""></span>
                </div>

                <div class="input-field">
                    <input id="reg-password" name="password" type="password" class="validate" autocomplete>
                    <label for="reg-password">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль" required=""></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" autocomplete>
                    <label for="confirm">Повтор пароля</label>
                    <span class="helper-text" data-error="Повторите пароль" required=""></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>